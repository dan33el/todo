<% content_for(:first_navbar_link) do %>
	<%= link_to "Все Задачи", tasks_url %>
<% end %>

<%= form_for @task, html: { class: "form-horizontal" } do |f| %>
	<%= render partial: 'layouts/error_exp' %>

	<div class="panel-body">
		<div class="form-group">
		    <label for="input" class="col-sm-2 control-label">Задача</label>
		    <div class="col-sm-10">
		    	<%= f.text_field :subject %>
		    </div>
	  	</div>
		<div class="form-group">
		    <label for="input" class="col-sm-2 control-label">Описание</label>
		    <div class="col-sm-10">
				<%= f.text_field :details %>
		    </div>
	  	</div>
	  	<div class="form-group">
		    <label for="input" class="col-sm-2 control-label">Дата</label>
		    <div class="col-sm-10">
				<%= f.date_field :date %>
		    </div>
	  	</div>
	</div>

	<div class="panel-footer">
		<%= f.submit 'Сохранить задачу', class: "btn btn-warning" %>
	</div>
<% end %>