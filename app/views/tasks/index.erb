
<div class="row">

	<div class="col-md-3   col-md-push-1">
		<%= render partial: "search_date_form" %>
	</div>

	<div class="col-md-3   col-md-push-2">
		<%= link_to "Новая Задача", new_task_url, class: "btn btn-default" %>
	</div>

	<div class="col-md-2 col-md-push-2">
		<div class="form-group"><%= link_to 'Посмотреть все задачи', tasks_url, class: "btn btn-default"  %></div>
	</div>
</div>
<% @records.each_slice(3) do |row| %>	
	<div class="row">
		<% row.map do |task| %>
		<div class= "col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading"><%= link_to task.subject, task_url(task.id), class: "btn btn-link" %>
						<%= link_to '', task_url(task.id), class: "glyphicon glyphicon-remove", method: :delete %>
				</div>

				<div class="panel-body">
					<%=	task.details %>
				</div>

				<div class="panel-footer">
					<div class="btn-group" role="group">
						<%= link_to 'Редактировать задачу', edit_task_url(task.id), class: "btn btn-primary" %>
						<% if task.completed %>
							<%=	button_to 'Задача сделана', task_completed_url(task), class: "btn btn-success" %>
						<% else %>
							<%=	button_to 'Выполнить!', task_completed_url(task), class: "btn btn-warning"  %>
						<% end %>	
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>

	
<% end %>